		<%
		SimpleDateFormat sdf = new SimpleDateFormat("yy/MM/dd HH:mm:ss");
		ArrayList<DatosTramaGetSet> lista = (ArrayList<DatosTramaGetSet>)session.getAttribute("listaDatos");
		System.out.println(lista);
		int i = 0;
		for(DatosTramaGetSet obj: lista){
			String fecha = obj.getFecha();
			i++;
			%>
			<tr>
				<td><%=i %></td>
				<td><%=obj.getImei() %></td>
